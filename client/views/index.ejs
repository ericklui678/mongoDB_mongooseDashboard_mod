<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Mongoose</title>
    </head>
    <body>
        <h1>All Mongoose</h1>
        <table>
            <tr align=left>
                <th>Name</th>
                <th>Location</th>
                <th>Skill</th>
                <th>Color</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% for (mongoose of mongooses) { %>
                <tr>
                    <td><a href="/mongooses/<%= mongoose.id %>"><%= mongoose.name %></a></td>
                    <td><%= mongoose.location %></td>
                    <td><%= mongoose.skill %></td>
                    <td><%= mongoose.color %></td>
                    <td><a href="/mongooses/edit/<%= mongoose.id %>">Edit</a></td>
                    <td><form action="/mongooses/destroy/<%= mongoose.id %>" method="post">
                        <input type="submit" name="submit" value="Delete">
                    </form></td>
                </tr>
            <% } %>
        </table>
        <a href="/new">New Mongoose</a>
    </body>
</html>
